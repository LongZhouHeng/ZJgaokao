<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_share"
    >

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar_result_1" >
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/pic_logo"
            android:layout_centerHorizontal="true"

            />

    </RelativeLayout>

    <RelativeLayout
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tv_ont"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机:"
            android:textColor="#7b7979"
            android:textSize="@dimen/text_size_16"
            tools:ignore="HardcodedText,SpUsage" />
        <EditText
            android:id="@+id/tv_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_ont"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_16"
            android:inputType="number"
            android:lines="11"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded,SpUsage,TextFields" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        tools:ignore="RtlSymmetry"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        >

        <TextView
            android:id="@+id/tv_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码:"
            android:textColor="#7b7979"
            android:textSize="@dimen/text_size_16"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/tv_login_passaord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_on"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:lines="6"
            android:hint="请输入密码"
            android:maxLength="16"
            android:textSize="@dimen/text_size_16"
            android:paddingEnd="20dp"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded,SpUsage" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="登 录"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_full"
        tools:ignore="HardcodedText" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        >

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="去注册"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="@dimen/text_size_14"
            android:textColor="#ffc75e"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="#ffc75e"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="right"
            android:textSize="@dimen/text_size_14"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessLeaf"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:id="@+id/ll_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="其他方式登录"
                android:gravity="center"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_6"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/umeng_socialize_wechat"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/umeng_socialize_qq"
               android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/umeng_socialize_sina"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
