<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"
        android:background="@color/text_color_primary"
        />

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar_search" >
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_share"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_background_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高考报考宝典 V1.0"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_background_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/iv_aboutus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="客服邮箱："
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_aboutus"
                    android:text="535318583@qq.com"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_next_1"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </RelativeLayout>
            <View
                android:id="@+id/iv_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/about_us"
                android:background="@color/app_background_color"
                />
            <RelativeLayout
                android:id="@+id/adress_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/iv_1"
                android:orientation="horizontal"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/iv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="官方网站："
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_about"
                    android:text="http://www.jindi163.com"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_next_1"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_background_color"
                android:layout_below="@+id/adress_us"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Copyright@2017 Hangzhou Jingdi Network Technology Co. LTD."
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="All rights reserved"
                    android:gravity="center"
                    android:textSize="12dp"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
